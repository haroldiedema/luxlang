{
  "name": "luxlang",
  "description": "Lux Language Compiler and Runtime",
  "license": "MIT",
  "keywords": [
    "compiler",
    "language",
    "runtime",
    "lux"
  ],
  "version": "1.0.0",
  "author": {
    "name": "Harold Iedema",
    "email": "harold@iedema.me",
    "url": "https://github.com/haroldiedema"
  },
  "homepage": "https://github.com/haroldiedema/lux-lang",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "generate": "ts-node scripts/generate.ts",
    "build": "npm run generate && tsc",
    "watch:ts": "tsc --watch",
    "watch:gen": "nodemon --watch src/VM/Instructions -e ts --exec \"npm run generate\"",
    "watch": "concurrently \"npm run watch:gen\" \"npm run watch:ts\"",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
